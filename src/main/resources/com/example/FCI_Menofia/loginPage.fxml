<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="527.0" prefWidth="695.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.FCI_Menofia.signUpAndLogin.LoginPage">
    <children>
        <ImageView fitHeight="579.0" fitWidth="736.0" opacity="0.87" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@assets/login.jpg"/>
            </image>
        </ImageView>
        <Pane layoutX="142.0" layoutY="20.0" prefHeight="539.0" prefWidth="452.0">
            <children>
                <ImageView fitHeight="338.0" fitWidth="490.0" layoutY="200.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@assets/white.png"/>
                    </image>
                </ImageView>
                <ImageView fitHeight="237.0" fitWidth="451.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@assets/loginBackground.jpg"/>
                    </image>
                </ImageView>
                <Label layoutX="140.0" layoutY="226.0" prefHeight="57.0" prefWidth="173.0"
                       style="-fx-background-color: #a9afc4; -fx-alignment: center; -fx-background-radius: 25px; -fx-padding: 15;"
                       text="Login Page" textFill="WHITE">
                    <font>
                        <Font name="Bookman Old Style Bold Italic" size="20.0"/>
                    </font>
                </Label>
                <Button fx:id="signInButton" layoutX="189.0" layoutY="427.0" mnemonicParsing="false"
                        onAction="#signInButtonFunction" prefHeight="39.0" prefWidth="73.0"
                        style="-fx-background-color: #a9afc4; -fx-background-radius: 30PX;" text="Sign In">
                    <font>
                        <Font name="Bookman Old Style Bold Italic" size="14.0"/>
                    </font>
                </Button>
                <Label layoutX="211.0" layoutY="498.0" prefHeight="25.0" prefWidth="155.0"
                       text="Don't have an Account !!">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <Button fx:id="goToSignUpButton" layoutX="371.0" layoutY="495.0" mnemonicParsing="false"
                        onAction="#signUpButtonFunction" prefHeight="31.0" prefWidth="67.0"
                        style="-fx-background-color: red; -fx-background-radius: 30Px;" text="Sign Up" textFill="WHITE">
                    <font>
                        <Font size="13.0"/>
                    </font>
                </Button>
                <TextField fx:id="userNameTextField" layoutX="111.0" layoutY="298.0" prefHeight="46.0" prefWidth="228.0"
                           promptText="user name"
                           style="-fx-alignment: CENTER; -fx-background-radius: 50PX; -fx-background-color: #ced0d9;">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </TextField>
                <Button fx:id="exitFromButton" layoutX="14.0" layoutY="14.0" mnemonicParsing="false"
                        onAction="#ExitFromApp" prefHeight="31.0" prefWidth="67.0"
                        style="-fx-background-color: #a9afc4; -fx-background-radius: 30Px;" text="Exit"
                        textFill="WHITE">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Button>
                <Label layoutX="151.0" prefHeight="64.0" prefWidth="149.0" text="Welcome" textFill="WHITE">
                    <font>
                        <Font name="Bookman Old Style" size="32.0"/>
                    </font>
                </Label>
                <PasswordField fx:id="passwordField" layoutX="112.0" layoutY="358.0" prefHeight="46.0" prefWidth="228.0"
                               promptText="password"
                               style="-fx-background-color: #ced0d9; -fx-alignment: CENTER; -fx-background-radius: 50PX;">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </PasswordField>
            </children>
        </Pane>
    </children>
</AnchorPane>
